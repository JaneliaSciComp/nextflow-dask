params {
    lsf_opts = ""
    runtime_opts = ""
    singularity_cache_dir = "$HOME/.singularity_cache"
}

profiles {

    standard {
        docker {
            enabled = true
        }

        singularity {
            enabled = false
        }
    }

    lsf {
        process {
            executor = 'lsf'

            clusterOptions = params.lsf_opts
        }

        docker {
            enabled = false
        }

        singularity {
            enabled = true
        }

    }
}

docker {
    temp = "auto"
    runOptions = "-v $PWD:$PWD --platform=linux/x86_64 ${params.runtime_opts}"
}

singularity {
    autoMounts = true
    cacheDir = "${params.singularity_cache_dir}"
    runOptions = "${params.runtime_opts}"
}
